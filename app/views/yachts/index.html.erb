<div class="container text-center">
  <div class="page header">
    <h1>yachts List</h1>
    <div class="container">
      <div class="row">
        <% @yachts.each do |yacht| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(https://picsum.photos/200/?random)">
            <div class="card-description">
              <h2><%= link_to yacht.name, yacht_path(yacht) %></h2>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
