<div class="container">
  <div class="row">
    <div class="col-sm-offset-4 col-sm-4">
      <%= simple_form_for [@yacht] do |f| %>
      <%= f.input :name %>
      <%= f.input :location %>
      <%= f.select(:boat_type, [['Houseboat', 'Houseboat'],
                                        ['Catamaran', 'Catamaran'],
                                        ['Sailboat', 'Sailboat'],
                                        ['Speedboat', 'Speedboat'],
                                        ['Motor boat', 'Motor boat']
                                       ]) %>
      <%= f.input :photo  %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Host Your Yacht", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
