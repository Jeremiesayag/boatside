<div class="container">
  <h1><%=@yacht.name%></h1>

  <div class="content-show">
    <div class="show-card">
      <div class="image-here-boat">
        <%= image_tag  "yachttest1.jpg", id: "image-show"%>
      </div>
      <div class="characteristic">
        <dl class="dl-horizontal">
          <dt>Location</dt>
          <dd><%= @yacht.location %></dd>
          <dt>Boat type</dt>
          <dd><%= @yacht.boat_type %></dd>
          <dt>Description</dt>
          <dd>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.</dd>
        </dl>
      </div>
    </div>

    <div class="form-booking">
      <form class="form-horizontal">
        <div class="form-group">
          <label for="start_date" class="col-lg-4 control-label">Start Date</label>
          <div class="col-lg-8">
            <input type="text" class="form-control" placeholder="02/03/2018">
          </div>
        </div>
        <div class="form-group">
          <label for="end_date" class="col-lg-4 control-label">End Date</label>
          <div class="col-lg-8">
            <input type="text" class="form-control" placeholder="02/07/2018">
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-4 col-sm-8">
            <button type="submit" class="btn btn-primary">Book </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>






